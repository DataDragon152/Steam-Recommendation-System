short\n","    return sentiment['compound'] < 0.05 and len(text.split()) > 10\n","\n","# Process files in batches of 10\n","def process_batch(batch_files):\n","    batch_data = []\n","    deleted_data = []\n","    for file_name in batch_files:\n","        file_path = os.path.join(folder_path, file_name)\n","        reviews_df = pd.read_csv(file_path, usecols=columns)\n","\n","        # Filter out reviews that are either too short or have neutral sentiment\n","        filtered_reviews = reviews_df[reviews_df['review'].apply(is_meaningful_review)]\n","\n","        # Get deleted reviews (those that were filtered out)\n","        deleted_reviews = reviews_df[~reviews_df['review'].apply(is_meaningful_review)]\n","\n","        # Append cleaned data and deleted data\n","        batch_data.append(filtered_reviews)\n","        deleted_data.append(deleted_reviews)\n","\n","    # Concatenate the cleaned data from all files in the batch\n","    all_filtered_reviews = pd.concat(batch_data, ignore_index=True)\n","\n","    # Concatenate the deleted data from all files in the batch\n","    all_deleted_reviews = pd.concat(deleted_data, ignore_index=True)\n","\n","    # Save the cleaned data to a new CSV file\n","    output_path = '/content/drive/MyDrive/Steam Analysis/Cleaned Data/'\n","    cleaned_file_path = os.path.join(output_path, 'cleaned_reviews_batch.csv')\n","    all_filtered_reviews.to_csv(cleaned_file_path, index=False)\n","\n","    # Save the deleted data to a separate CSV file\n","    deleted_file_path = os.path.join(output_path, 'deleted_reviews_batch.csv')\n","    all_deleted_reviews.to_csv(deleted_file_path, index=False)\n","\n","    return all_filtered_reviews, all_deleted_reviews\n","\n","# Function to process the next batch\n","def process_next_batch(start_index, batch_size=10):\n","    batch_files = files[start_index:start_index + batch_size]\n","    if not batch_files:\n","        print(\"No more files to process.\")\n","        return None\n","\n","    cleaned_r